<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <solid android:color="#6C6C6C" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:top="2px" android:left="2px">
        <shape android:shape="rectangle">
            <solid android:color="@color/keduax" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

</layer-list>