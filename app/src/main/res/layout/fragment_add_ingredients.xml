<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.ingredients.AddIngredients"
    android:background="@color/pertamax">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Tambah Bahan Pokok"
        android:textAlignment="center"
        android:textColor="@color/keduax"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Nama Bahan Pokok"
            android:textColor="@color/keduax"
            android:textSize="15dp" />

        <EditText
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/ingreName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_text2"
            android:clickable="true"
            android:inputType="text"
            android:shadowDx="2"
            android:shadowDy="4"
            android:text=""
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Quantity"
                android:textColor="@color/keduax"
                android:textSize="15dp" />

            <EditText
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/ingreQty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:inputType="number"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Harga/item/Kg"
                android:textColor="@color/keduax"
                android:textSize="15dp" />

            <id.adiandrea.rupiahedittext.RupiahEditText
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/ingrePrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:inputType="number"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnSaveIngre"
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/keduax"
        android:fontFamily="@font/poppins_bold"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/pertamax"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
</androidx.constraintlayout.widget.ConstraintLayout>