<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:clickable="true"
        android:id="@+id/wadah_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/id_trans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1.1"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="ID"
            android:textColor="@color/keduax"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/total_trans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="Total"
            android:textColor="@color/keduax"
            android:textSize="18dp" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/status_trans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1.1"
            android:fontFamily="@font/poppins_medium"
            android:text="Status"
            android:textColor="@color/keduax"
            android:textSize="18dp" />
        <TextView
            android:textAlignment="center"
            android:id="@+id/tgl_trans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Tanggal"
            android:textColor="@color/keduax"
            android:textSize="18dp" />



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1.2"
            android:orientation="horizontal" >
            <ImageView
                android:clickable="true"
                android:id="@+id/btn_detail_trans"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/cart"
                android:layout_margin="2dp"
                />

        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>