            <LinearLayout
                android:id="@+id/wd_kat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/textView3">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        app:backgroundTint="@null"
                        android:drawableTop="@drawable/kat_all"
                        android:background="@drawable/btn_cust"
                        android:text="Semua"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:textColor="@color/keduax"
                        />
                <Button
                    android:id="@+id/cat_kopi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    app:backgroundTint="@null"
                    android:drawableTop="@drawable/kat_kopi"
                    android:background="@drawable/btn_cust"
                    android:text="Kopi"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:textColor="@color/keduax"
                    />

                <Button
                    android:id="@+id/cat_teh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cust"
                    android:drawableTop="@drawable/kat_teh"
                    android:elevation="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Teh"
                    android:textAllCaps="false"
                    android:textColor="@color/keduax"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/cat_jus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    app:backgroundTint="@null"
                    android:drawableTop="@drawable/kat_jus"
                    android:background="@drawable/btn_cust"
                    android:text="Jus"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:textColor="@color/keduax"
                    />
                <Button
                    android:id="@+id/cat_susu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    app:backgroundTint="@null"
                    android:drawableTop="@drawable/kat_milk"
                    android:background="@drawable/btn_cust"
                    android:text="Susu"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:textColor="@color/keduax"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    app:backgroundTint="@null"
                    android:drawableTop="@drawable/kat_fud"
                    android:background="@drawable/btn_cust"
                    android:text="Makanan"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:textColor="@color/keduax"
                    />
            </LinearLayout>

