<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:clickable="true"
        android:id="@+id/wadah_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView

            android:id="@+id/id_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"

            android:layout_weight="1"

            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="ID"
            android:textColor="@color/keduax"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/nama_produk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="0.8"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="Nama Produk"
            android:textColor="@color/keduax"
            android:textSize="20dp" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/harga_produk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"

            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Harga"
            android:textColor="@color/keduax"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/stok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1.1"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="Stock"
            android:textColor="@color/keduax"
            android:textSize="20dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"

            android:layout_weight="1"
            android:orientation="horizontal" >
            <ImageButton
                android:id="@+id/btn_detail_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_info"
                android:backgroundTint="@color/keduax"
                android:layout_margin="2dp"
                />
            <ImageButton
                android:id="@+id/btn_edit_produk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/keduax"
                android:layout_margin="2dp"
                android:src="@drawable/ic_edit"
                />
            <ImageButton
                android:id="@+id/btn_delete_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"
                android:backgroundTint="@color/keduax"
                android:layout_margin="2dp"
                />
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>