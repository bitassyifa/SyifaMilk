<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.user.AdduserLayout"
   android:background="@color/pertamax">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Tambah Pengguna"
        android:textAlignment="center"
        android:textColor="@color/keduax"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/result_image"
        app:layout_constraintEnd_toEndOf="@+id/result_image"
        app:layout_constraintStart_toStartOf="@+id/result_image" />
    <ImageView
        android:id="@+id/result_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="200dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
             
                android:text="Nama Lengkap"
                android:textColor="@color/keduax"
                android:textSize="25dp" />

            <EditText
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/fullname_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
             
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
             
                android:text="Nama Pengguna"
                android:textColor="@color/keduax"
                android:textSize="25dp" />

            <EditText
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
             
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20dp"  />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
             
                android:text="No Tlp"
                android:textColor="@color/keduax"
                android:textSize="25dp" />

            <EditText
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/notlp_input"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
             
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20dp"  />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
             
                android:text="Email"
                android:textColor="@color/keduax"
                android:textSize="25dp" />

            <EditText
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:inputType="textEmailAddress"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Photo"
                android:textColor="@color/keduax"
                android:textSize="25dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:cardCornerRadius="7dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/keduax"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/nama_file"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_height="wrap_content"
                        android:text="Nama File"
                        android:textSize="11dp"
                        android:textColor="@color/keduax"
                        android:layout_weight="1"/>
                    <Button
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_ft"
                        android:id="@+id/pilih_file"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Pilih File"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.5"
                        android:shadowRadius="10"
                        android:textSize="12dp"
                        android:background="@drawable/bg_text"
                        app:backgroundTint="@null"/>
                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Password"
                android:textColor="@color/keduax"
                android:textSize="25dp" />

            <EditText
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:inputType="textPassword"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Confirm Password"
                android:textColor="@color/keduax"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/confpassword_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_margin="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/keduax"
        android:fontFamily="@font/poppins_bold"
        android:text="Tambah Pengguna"
        android:textAllCaps="false"
        android:textColor="@color/pertamax"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
</androidx.constraintlayout.widget.ConstraintLayout>