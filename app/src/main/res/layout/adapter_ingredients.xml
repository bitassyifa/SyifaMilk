<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:clickable="true"
        android:id="@+id/wadah_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/no_ingre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1.2"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="No"
            android:textColor="@color/keduax"
            android:textSize="13dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/id_ingre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1.1"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="ID"
            android:textColor="@color/keduax"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/name_ingre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="nama"
            android:textColor="@color/keduax"
            android:textSize="13dp"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/qty_ingre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1.1"
            android:fontFamily="@font/poppins_medium"
            android:text="qty"
            android:textColor="@color/keduax"
            android:textSize="13dp"/>
        <TextView
            android:textAlignment="center"
            android:id="@+id/price_ingre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:text="harga"
            android:textColor="@color/keduax"
            android:textSize="13dp"/>
        <TextView
            android:textAlignment="center"
            android:id="@+id/total_ingre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:text="total"
            android:textColor="@color/keduax"
            android:textSize="13dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_edit_ingre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:backgroundTint="@color/keduax"
                android:layout_margin="2dp"
                android:src="@drawable/ic_edit"
                />
            <ImageButton
                android:id="@+id/btn_delete_ingre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:src="@drawable/ic_delete"
                android:backgroundTint="@color/keduax"
                android:layout_margin="2dp"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>