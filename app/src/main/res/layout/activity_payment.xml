<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".screen.payment.PaymentActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="2"
       android:orientation="vertical"
       android:background="@color/keduax">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:id="@+id/linearLayout10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:background="@drawable/bg_kasir"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:layout_weight="1.2"
               android:fontFamily="@font/poppins_regular"
               android:text="ID Transaksi :"
               android:textColor="@color/white"
               android:textSize="22dp" />
               <TextView
                   android:id="@+id/id_trans"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Order"
                   android:textColor="@color/white"
                   android:textSize="25dp" />
           </LinearLayout>

           <LinearLayout
               android:layout_marginTop="30dp"
               android:id="@+id/title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Item"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1.3"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Qty"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Price"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="20dp" />
           </LinearLayout>

           <View
               android:id="@+id/view"
               android:layout_margin="4dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/pertamax"
               app:layout_constraintTop_toBottomOf="@+id/title"
               tools:layout_editor_absoluteX="20dp" />


           <LinearLayout
               android:id="@+id/wadah"
               android:layout_width="match_parent"
               android:layout_height="0dp"
              android:layout_margin="10dp"
               android:orientation="horizontal"
               app:layout_constraintBottom_toTopOf="@+id/view2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/title">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/order_list"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   />


           </LinearLayout>

           <View
               android:id="@+id/view2"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:layout_margin="4dp"
               android:background="@color/pertamax"

               app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
               tools:layout_editor_absoluteX="20dp" />

           <LinearLayout
               android:id="@+id/linearLayout9"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:orientation="horizontal"
               app:layout_constraintBottom_toBottomOf="parent"

               tools:layout_editor_absoluteX="20dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Subtotal   :"
                   android:textColor="@color/white"
                   android:textSize="25dp" />

               <TextView
                   android:id="@+id/subtotal1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="0"
                   android:textAlignment="textEnd"
                   android:textColor="@color/white"
                   android:textSize="27dp" />
           </LinearLayout>


       </androidx.constraintlayout.widget.ConstraintLayout>

   </LinearLayout>
    <LinearLayout
        android:background="@color/pertamax"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Payment"
                android:textColor="@color/keduax"
                android:textSize="30dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="choose payment method"
                android:textColor="@color/keduax"
                android:textSize="20dp" />
            <View
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/keduax" />
        </LinearLayout>

