<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.payment.PaymentActivity"
    android:fillViewport="true" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="2"
       android:orientation="vertical"
       android:background="@color/keduax">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:id="@+id/linearLayout10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:background="@drawable/bg_kasir"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:layout_weight="1.2"
               android:fontFamily="@font/poppins_regular"
               android:text="ID Transaksi :"
               android:textColor="@color/white"
               android:textSize="22dp" />
               <TextView
                   android:id="@+id/id_trans"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Order"
                   android:textColor="@color/white"
                   android:textSize="25dp" />
           </LinearLayout>

           <LinearLayout
               android:layout_marginTop="30dp"
               android:id="@+id/title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Item"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1.3"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Qty"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Price"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="20dp" />
           </LinearLayout>

           <View
               android:id="@+id/view"
               android:layout_margin="4dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/pertamax"
               app:layout_constraintTop_toBottomOf="@+id/title"
               tools:layout_editor_absoluteX="20dp" />


           <LinearLayout
               android:id="@+id/wadah"
               android:layout_width="match_parent"
               android:layout_height="0dp"
              android:layout_margin="10dp"
               android:orientation="horizontal"
               app:layout_constraintBottom_toTopOf="@+id/view2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/title">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/order_list"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   />


           </LinearLayout>

           <View
               android:id="@+id/view2"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:layout_margin="4dp"
               android:background="@color/pertamax"

               app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
               tools:layout_editor_absoluteX="20dp" />

           <LinearLayout
               android:id="@+id/linearLayout9"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:orientation="horizontal"
               app:layout_constraintBottom_toBottomOf="parent"

               tools:layout_editor_absoluteX="20dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Subtotal   :"
                   android:textColor="@color/white"
                   android:textSize="25dp" />

               <TextView
                   android:id="@+id/subtotal1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="0"
                   android:textAlignment="textEnd"
                   android:textColor="@color/white"
                   android:textSize="27dp" />
           </LinearLayout>


       </androidx.constraintlayout.widget.ConstraintLayout>

   </LinearLayout>
    <LinearLayout
        android:background="@color/pertamax"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Payment"
            android:textColor="@color/keduax"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="choose payment method"
            android:textColor="@color/keduax"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@color/keduax" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_mpay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        tools:layout_editor_absoluteX="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_payment_proses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="ID Customer"
                android:textColor="@color/keduax"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/pay_idcustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"

                android:text="Nama Customer"
                android:textColor="@color/keduax"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/pay_namecustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bayar"
                android:textColor="@color/keduax"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/pay_bayar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kembalian"
                android:textColor="@color/keduax"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/pay_kembalian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_text2"
                android:clickable="true"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_payment_proses"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/keduax"
        android:fontFamily="@font/poppins_bold"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/pertamax"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>

</ScrollView>